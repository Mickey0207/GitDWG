<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GitDWG.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GitDWG"
    xmlns:models="using:GitDWG.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GitDWG - Git版本控制與AutoCAD圖面比較工具">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 頂端功能表列 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <MenuBar Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
                
                <!-- 檔案選單 -->
                <MenuBarItem Title="檔案(F)">
                    <MenuFlyoutItem Text="選擇儲存庫" Command="{x:Bind ViewModel.SelectRepositoryCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="O"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="初始化儲存庫" Command="{x:Bind ViewModel.InitializeRepositoryCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="N"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="重新整理" Command="{x:Bind ViewModel.RefreshCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="強制重新整理" Command="{x:Bind ViewModel.ForceRefreshCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="F5"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 編輯選單 -->
                <MenuBarItem Title="編輯(E)">
                    <MenuFlyoutItem Text="快速提交" Command="{x:Bind ViewModel.QuickCommitCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Enter"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="暫存所有" Command="{x:Bind ViewModel.StageAllCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="A"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="提交變更" Command="{x:Bind ViewModel.CommitCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Enter"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="用戶設定" Command="{x:Bind ViewModel.EditUserSettingsCommand}"/>
                </MenuBarItem>

                <!-- 檢視選單 -->
                <MenuBarItem Title="檢視(V)">
                    <MenuFlyoutItem Text="檢查CAD檔案" Command="{x:Bind ViewModel.CheckCadFilesCommand}"/>
                    <MenuFlyoutItem Text="診斷提交問題" Command="{x:Bind ViewModel.DiagnoseCommitCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="版本操作">
                        <MenuFlyoutItem Text="安全回復" Command="{x:Bind ViewModel.RevertToCommitCommand}"/>
                        <MenuFlyoutItem Text="重置版本" Command="{x:Bind ViewModel.ResetToCommitCommand}"/>
                        <MenuFlyoutItem Text="比較版本" Command="{x:Bind ViewModel.CompareCommitsCommand}"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>

                <!-- Git選單 -->
                <MenuBarItem Title="Git(G)">
                    <MenuFlyoutItem Text="建立新分支" Command="{x:Bind ViewModel.CreateBranchCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="B"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="分支操作">
                        <MenuFlyoutItem Text="切換分支" x:Name="SwitchBranchMenuItem"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="查看提交歷史">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="H"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 專案選單 -->
                <MenuBarItem Title="專案(P)">
                    <MenuFlyoutItem Text="設定AutoCAD路徑" Command="{x:Bind ViewModel.SetAutoCADPathCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="開啟專案資料夾" Click="OpenProjectFolder_Click"/>
                </MenuBarItem>

                <!-- 建置選單 -->
                <MenuBarItem Title="建置(B)">
                    <MenuFlyoutItem Text="建立提交" Command="{x:Bind ViewModel.CommitCommand}"/>
                    <MenuFlyoutItem Text="建立分支" Command="{x:Bind ViewModel.CreateBranchCommand}"/>
                </MenuBarItem>

                <!-- 偵錯選單 -->
                <MenuBarItem Title="偵錯(D)">
                    <MenuFlyoutItem Text="診斷Git狀態" Command="{x:Bind ViewModel.DiagnoseCommitCommand}"/>
                    <MenuFlyoutItem Text="檢查檔案鎖定" Command="{x:Bind ViewModel.CheckCadFilesCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="重新整理Git狀態" Command="{x:Bind ViewModel.ForceRefreshCommand}"/>
                </MenuBarItem>

                <!-- 測試選單 -->
                <MenuBarItem Title="測試(S)">
                    <MenuFlyoutItem Text="測試AutoCAD連接" Click="TestAutoCADConnection_Click"/>
                    <MenuFlyoutItem Text="測試圖面開啟" Click="TestDrawingOpen_Click"/>
                </MenuBarItem>

                <!-- 分析選單 -->
                <MenuBarItem Title="分析(N)">
                    <MenuFlyoutItem Text="分析提交趨勢" Click="AnalyzeCommitTrends_Click"/>
                    <MenuFlyoutItem Text="分析檔案變更" Click="AnalyzeFileChanges_Click"/>
                </MenuBarItem>

                <!-- 工具選單 -->
                <MenuBarItem Title="工具(T)">
                    <MenuFlyoutItem Text="圖面比較工具" Click="DrawingCompareTools_Click"/>
                    <MenuFlyoutItem Text="批次處理工具" Click="BatchProcessTools_Click"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="選項設定" Command="{x:Bind ViewModel.EditUserSettingsCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="P"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 延伸模組選單 -->
                <MenuBarItem Title="延伸模組(X)">
                    <MenuFlyoutItem Text="管理延伸模組" Click="ManageExtensions_Click"/>
                    <MenuFlyoutItem Text="安裝延伸模組" Click="InstallExtensions_Click"/>
                </MenuBarItem>

                <!-- 視窗選單 -->
                <MenuBarItem Title="視窗(W)">
                    <MenuFlyoutItem Text="新增視窗" Click="NewWindow_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="N"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="關閉視窗" Click="CloseWindow_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="W"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 說明選單 -->
                <MenuBarItem Title="說明(H)">
                    <MenuFlyoutItem Text="使用說明" Click="ShowHelp_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F1"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="快速入門" Click="ShowQuickStart_Click"/>
                    <MenuFlyoutItem Text="鍵盤快捷鍵" Click="ShowKeyboardShortcuts_Click"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="檢查更新" Click="CheckForUpdates_Click"/>
                    <MenuFlyoutItem Text="關於GitDWG" Click="ShowAbout_Click"/>
                </MenuBarItem>
            </MenuBar>

            <!-- 右側狀態區域 -->
            <Grid Grid.Column="1" Margin="16,0">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <!-- 分支資訊 -->
                    <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" 
                           CornerRadius="12" Padding="8,4">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="分支:" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentBranch, Mode=OneWay}" 
                                      FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 用戶資訊 -->
                    <Border Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}" 
                           CornerRadius="12" Padding="8,4">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="用戶:" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Bind ViewModel.AuthorName, Mode=OneWay}" 
                                      FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 主要內容 -->
        <Grid Grid.Row="1" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板 -->
            <ScrollViewer Grid.Column="0" Margin="0,0,16,0">
                <StackPanel Spacing="8">
                    <!-- 儲存庫資訊 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="儲存庫資訊" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBlock Text="路徑:" FontSize="12"/>
                            <TextBlock Text="{x:Bind ViewModel.RepositoryPath, Mode=OneWay}" 
                                      FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <TextBlock Text="狀態:" FontSize="12"/>
                            <TextBlock Text="{x:Bind ViewModel.IsRepositoryLoaded, Mode=OneWay}" 
                                      FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 分支列表 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="分支" FontWeight="Bold" FontSize="14"/>
                                <Button Content="+" Command="{x:Bind ViewModel.CreateBranchCommand}" 
                                       Margin="8,0,0,0" FontSize="12" Padding="8,2"/>
                            </StackPanel>
                            <ListView ItemsSource="{x:Bind ViewModel.Branches}" 
                                     SelectionMode="Single" MaxHeight="150">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" VerticalAlignment="Center" FontSize="12"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- 提交區域 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="提交變更" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            
                            <!-- 顯示當前作者資訊 -->
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="8" Margin="0,0,0,8">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="作者資訊" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorName, Mode=OneWay}" 
                                              FontSize="11" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorEmail, Mode=OneWay}" 
                                              FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <TextBox PlaceholderText="提交訊息（可選，快速提交會自動產生）" 
                                    Text="{x:Bind ViewModel.CommitMessage, Mode=TwoWay}" 
                                    Margin="0,0,0,8" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                            
                            <!-- 提交按鈕群組 -->
                            <StackPanel Spacing="8">
                                <!-- 快速提交按鈕 - 一鍵式操作 -->
                                <Button Content="快速提交" 
                                       Command="{x:Bind ViewModel.QuickCommitCommand}"
                                       Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                       HorizontalAlignment="Stretch"
                                       ToolTipService.ToolTip="一鍵暫存並提交所有變更，無需分步操作"/>
                                
                                <!-- 傳統兩步式操作 -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="暫存所有" Command="{x:Bind ViewModel.StageAllCommand}"/>
                                    <Button Content="提交" Command="{x:Bind ViewModel.CommitCommand}"
                                           ToolTipService.ToolTip="{x:Bind ViewModel.CommitButtonTooltip, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <!-- 說明文字 -->
                                <TextBlock Text="使用「快速提交」可一次完成暫存和提交，或使用傳統的「暫存所有」→「提交」兩步驟操作" 
                                          FontSize="10" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 狀態變更 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="檔案狀態" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            <ListView ItemsSource="{x:Bind ViewModel.StatusItems}" MaxHeight="150">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" FontSize="12" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 右側面板 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- 提交歷史 -->
                <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="提交歷史" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{x:Bind ViewModel.Commits.Count, Mode=OneWay}" 
                                      FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="個提交" FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <ScrollViewer Height="400" VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled">
                            <ListView ItemsSource="{x:Bind ViewModel.Commits}" 
                                     SelectedItem="{x:Bind ViewModel.SelectedCommit, Mode=TwoWay}"
                                     SelectionMode="Single"
                                     ScrollViewer.VerticalScrollMode="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:CommitInfo">
                                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                               CornerRadius="4" Margin="0,2" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Bind ShortSha}" 
                                                          FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind Message}" 
                                                          FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Bind Author}" 
                                                          FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
                                                          Text="{x:Bind Date}" 
                                                          FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                          Margin="0,4,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 版本操作 -->
                <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="版本操作" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 版本比較 -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本比較" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="比較選擇的提交與其前一個版本" FontSize="11" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="比較版本" 
                                       Command="{x:Bind ViewModel.CompareCommitsCommand}"
                                       Margin="8,0"/>
                            </Grid>
                            
                            <!-- 版本回復 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本回復" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="回復到選擇的版本或重置歷史" FontSize="11" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="安全回復" 
                                       Command="{x:Bind ViewModel.RevertToCommitCommand}"
                                       Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                       Margin="8,0,4,0"
                                       ToolTipService.ToolTip="創建新提交來撤銷變更，保留歷史記錄"/>
                                
                                <Button Grid.Column="2" Content="重置版本" 
                                       Command="{x:Bind ViewModel.ResetToCommitCommand}"
                                       Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                       Margin="4,0"
                                       ToolTipService.ToolTip="危險操作：刪除提交歷史並重置到指定版本"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 變更的檔案 -->
                <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="變更的圖面檔案" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <ListView ItemsSource="{x:Bind ViewModel.ChangedFiles}" x:Name="ChangedFilesList">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                           CornerRadius="4" Margin="0,2" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Bind}" 
                                                      VerticalAlignment="Center" FontSize="12"/>
                                            <Button Grid.Column="1" Content="開啟圖面" 
                                                   Click="OpenDrawingButton_Click"
                                                   Tag="{x:Bind}"
                                                   FontSize="11" Padding="6,4"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                Padding="16,8">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                      FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Border>
    </Grid>
</Window>
