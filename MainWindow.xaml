<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GitDWG.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GitDWG"
    xmlns:models="using:GitDWG.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GitDWG - Git版本控制與AutoCAD圖面比較工具">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <!-- 深色主題配色定義 -->
        <Grid.Resources>
            <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FF111827"/>           <!-- 深藍灰主背景 -->
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FF1E293B"/>          <!-- 深灰藍面板背景 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FF334155"/>           <!-- 卡片背景 -->
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FF475569"/>          <!-- 輸入框背景 -->
            <SolidColorBrush x:Key="BorderBrush" Color="#FF4B5563"/>                   <!-- 邊框顏色 -->
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFF1F5F9"/>              <!-- 主要文字 -->
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFE2E8F0"/>            <!-- 次要文字 -->
            <SolidColorBrush x:Key="MutedTextBrush" Color="#FF94A3B8"/>                <!-- 灰色文字 -->
            <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/>                   <!-- 藍色強調 -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#FF10B981"/>                  <!-- 綠色成功 -->
            <SolidColorBrush x:Key="WarningBrush" Color="#FFF59E0B"/>                  <!-- 黃色警告 -->
            <SolidColorBrush x:Key="DangerBrush" Color="#FFF87171"/>                   <!-- 紅色危險 -->
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <StaticResource ResourceKey="MainBackgroundBrush"/>
        </Grid.Background>

        <!-- 頂端功能表列 -->
        <Grid Grid.Row="0" Background="{StaticResource PanelBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <MenuBar Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}">
                
                <!-- 檔案選單 -->
                <MenuBarItem Title="檔案(F)">
                    <MenuFlyoutItem Text="選擇儲存庫" Command="{x:Bind ViewModel.SelectRepositoryCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="O"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="初始化儲存庫" Command="{x:Bind ViewModel.InitializeRepositoryCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="N"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="重新整理" Command="{x:Bind ViewModel.RefreshCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="強制重新整理" Command="{x:Bind ViewModel.ForceRefreshCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="F5"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 編輯選單 -->
                <MenuBarItem Title="編輯(E)">
                    <MenuFlyoutItem Text="快速提交" Command="{x:Bind ViewModel.QuickCommitCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Enter"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="暫存所有" Command="{x:Bind ViewModel.StageAllCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="A"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="提交變更" Command="{x:Bind ViewModel.CommitCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Enter"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="用戶設定" Command="{x:Bind ViewModel.EditUserSettingsCommand}"/>
                </MenuBarItem>

                <!-- 檢視選單 -->
                <MenuBarItem Title="檢視(V)">
                    <MenuFlyoutItem Text="檢查CAD檔案" Command="{x:Bind ViewModel.CheckCadFilesCommand}"/>
                    <MenuFlyoutItem Text="診斷提交問題" Command="{x:Bind ViewModel.DiagnoseCommitCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="版本操作">
                        <MenuFlyoutItem Text="安全回復" Command="{x:Bind ViewModel.RevertToCommitCommand}"/>
                        <MenuFlyoutItem Text="重置版本" Command="{x:Bind ViewModel.ResetToCommitCommand}"/>
                        <MenuFlyoutItem Text="比較版本" Command="{x:Bind ViewModel.CompareCommitsCommand}"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>

                <!-- Git選單 -->
                <MenuBarItem Title="Git(G)">
                    <MenuFlyoutItem Text="建立新分支" Command="{x:Bind ViewModel.CreateBranchCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="B"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="分支圖形管理器" Click="OpenBranchGraphManager_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="G"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSubItem Text="分支操作">
                        <MenuFlyoutItem Text="切換分支" x:Name="SwitchBranchMenuItem"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="查看提交歷史">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="H"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 專案選單 -->
                <MenuBarItem Title="專案(P)">
                    <MenuFlyoutItem Text="設定AutoCAD路徑" Command="{x:Bind ViewModel.SetAutoCADPathCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="開啟專案資料夾" Click="OpenProjectFolder_Click"/>
                </MenuBarItem>

                <!-- 工具選單 -->
                <MenuBarItem Title="工具(T)">
                    <MenuFlyoutItem Text="檢查檔案鎖定" Command="{x:Bind ViewModel.CheckCadFilesCommand}"/>
                    <MenuFlyoutItem Text="重新整理Git狀態" Command="{x:Bind ViewModel.ForceRefreshCommand}"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="選項設定" Command="{x:Bind ViewModel.EditUserSettingsCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="P"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 視窗選單 -->
                <MenuBarItem Title="視窗(W)">
                    <MenuFlyoutItem Text="新增視窗" Click="NewWindow_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="N"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="關閉視窗" Click="CloseWindow_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="W"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!-- 說明選單 -->
                <MenuBarItem Title="說明(H)">
                    <MenuFlyoutItem Text="使用說明" Click="ShowHelp_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F1"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="快速入門" Click="ShowQuickStart_Click"/>
                    <MenuFlyoutItem Text="鍵盤快捷鍵" Click="ShowKeyboardShortcuts_Click"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="檢查更新" Click="CheckForUpdates_Click"/>
                    <MenuFlyoutItem Text="關於GitDWG" Click="ShowAbout_Click"/>
                </MenuBarItem>
            </MenuBar>

            <!-- 右側狀態區域 -->
            <Grid Grid.Column="1" Margin="16,0">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <!-- 分支資訊 -->
                    <Border Background="{StaticResource AccentBrush}" 
                           CornerRadius="12" Padding="10,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="分支:" FontSize="12" VerticalAlignment="Center" 
                                      Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentBranch, Mode=OneWay}" 
                                      FontWeight="Bold" FontSize="12" VerticalAlignment="Center"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 用戶資訊 -->
                    <Border Background="{StaticResource SuccessBrush}" 
                           CornerRadius="12" Padding="10,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="用戶:" FontSize="12" VerticalAlignment="Center" 
                                      Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind ViewModel.AuthorName, Mode=OneWay}" 
                                      FontWeight="Bold" FontSize="12" VerticalAlignment="Center"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 主要內容 -->
        <Grid Grid.Row="1" Padding="16" Background="{StaticResource MainBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板 -->
            <ScrollViewer Grid.Column="0" Margin="0,0,16,0">
                <StackPanel Spacing="12">
                    <!-- 儲存庫資訊 -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="儲存庫資訊" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBlock Text="路徑:" FontSize="13" FontWeight="SemiBold"
                                      Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.RepositoryPath, Mode=OneWay}" 
                                      FontSize="11" Foreground="{StaticResource MutedTextBrush}"
                                      TextWrapping="Wrap" Margin="0,2,0,8"/>
                            <TextBlock Text="狀態:" FontSize="13" FontWeight="SemiBold"
                                      Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.IsRepositoryLoaded, Mode=OneWay}" 
                                      FontSize="11" Foreground="{StaticResource MutedTextBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 分支列表 -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="分支" FontWeight="Bold" FontSize="16"
                                          Foreground="{StaticResource PrimaryTextBrush}"/>
                                <Button Content="+" Command="{x:Bind ViewModel.CreateBranchCommand}" 
                                       Margin="12,0,0,0" FontSize="14" Padding="10,4"
                                       Background="{StaticResource AccentBrush}" Foreground="White"
                                       CornerRadius="6" BorderThickness="0"/>
                            </StackPanel>
                            <ListView ItemsSource="{x:Bind ViewModel.Branches}" 
                                     SelectionMode="Single" MaxHeight="180"
                                     Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Border Background="{StaticResource InputBackgroundBrush}" 
                                               CornerRadius="6" Margin="0,2" Padding="10,6">
                                            <TextBlock Text="{x:Bind}" VerticalAlignment="Center" FontSize="12"
                                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- 提交區域 -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="提交變更" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            
                            <!-- 顯示當前作者資訊 -->
                            <Border Background="{StaticResource AccentBrush}"
                                    CornerRadius="8" Padding="12" Margin="0,0,0,12" Opacity="0.9">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="作者資訊" FontSize="13" FontWeight="SemiBold"
                                              Foreground="White"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorName, Mode=OneWay}" 
                                              FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorEmail, Mode=OneWay}" 
                                              FontSize="11" Foreground="White" Opacity="0.9"/>
                                </StackPanel>
                            </Border>
                            
                            <TextBox PlaceholderText="提交訊息（可選，快速提交會自動產生）" 
                                    Text="{x:Bind ViewModel.CommitMessage, Mode=TwoWay}" 
                                    Margin="0,0,0,12" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                    Background="{StaticResource InputBackgroundBrush}"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    CornerRadius="6"/>
                            
                            <!-- 提交按鈕群組 -->
                            <StackPanel Spacing="8">
                                <!-- 快速提交按鈕 - 一鍵式操作 -->
                                <Button Content="快速提交" 
                                       Command="{x:Bind ViewModel.QuickCommitCommand}"
                                       Background="{StaticResource SuccessBrush}"
                                       Foreground="White"
                                       HorizontalAlignment="Stretch"
                                       Height="40" FontSize="14" FontWeight="SemiBold"
                                       CornerRadius="8" BorderThickness="0"
                                       ToolTipService.ToolTip="一鍵暫存並提交所有變更，無需分步操作"/>
                                
                                <!-- 傳統兩步式操作 -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="暫存所有" Command="{x:Bind ViewModel.StageAllCommand}"
                                           Background="{StaticResource InputBackgroundBrush}"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                           CornerRadius="6" Padding="12,6"/>
                                    <Button Content="提交" Command="{x:Bind ViewModel.CommitCommand}"
                                           Background="{StaticResource InputBackgroundBrush}"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                           CornerRadius="6" Padding="12,6"
                                           ToolTipService.ToolTip="{x:Bind ViewModel.CommitButtonTooltip, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <!-- 說明文字 -->
                                <TextBlock Text="使用「快速提交」可一次完成暫存和提交，或使用傳統的「暫存所有」→「提交」兩步驟操作" 
                                          FontSize="11" 
                                          Foreground="{StaticResource MutedTextBrush}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 狀態變更 -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="檔案狀態" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <ListView ItemsSource="{x:Bind ViewModel.StatusItems}" MaxHeight="180"
                                     Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Border Background="{StaticResource InputBackgroundBrush}" 
                                               CornerRadius="6" Margin="0,2" Padding="10,6">
                                            <TextBlock Text="{x:Bind}" FontSize="12" TextWrapping="Wrap"
                                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 右側面板 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>

                <!-- 提交歷史 -->
                <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="16" Margin="0,0,0,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="提交歷史" FontWeight="Bold" FontSize="18"
                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.Commits.Count, Mode=OneWay}" 
                                      FontSize="14" Foreground="{StaticResource MutedTextBrush}"
                                      Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="個提交" FontSize="14" 
                                      Foreground="{StaticResource MutedTextBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <ScrollViewer Height="420" VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled">
                            <ListView ItemsSource="{x:Bind ViewModel.Commits}" 
                                     SelectedItem="{x:Bind ViewModel.SelectedCommit, Mode=TwoWay}"
                                     SelectionMode="Single"
                                     Background="Transparent"
                                     ScrollViewer.VerticalScrollMode="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:CommitInfo">
                                        <Border Background="{StaticResource InputBackgroundBrush}" 
                                               CornerRadius="8" Margin="0,3" Padding="16"
                                               BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="90"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="140"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Bind ShortSha}" 
                                                          FontFamily="Consolas" FontSize="13" FontWeight="Bold"
                                                          Foreground="{StaticResource AccentBrush}"/>
                                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind Message}" 
                                                          FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"
                                                          Foreground="{StaticResource PrimaryTextBrush}"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Bind Author}" 
                                                          FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
                                                          Text="{x:Bind Date}" 
                                                          FontSize="11" Foreground="{StaticResource MutedTextBrush}"
                                                          Margin="0,6,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 版本操作 -->
                <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="16" Margin="0,0,0,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="版本操作" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"
                                  Foreground="{StaticResource PrimaryTextBrush}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 版本比較 -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本比較" FontSize="14" FontWeight="SemiBold"
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Text="比較選擇的提交與其前一個版本" FontSize="12" 
                                              Foreground="{StaticResource MutedTextBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="比較版本" 
                                       Command="{x:Bind ViewModel.CompareCommitsCommand}"
                                       Background="{StaticResource AccentBrush}" Foreground="White"
                                       CornerRadius="6" BorderThickness="0" Padding="16,8"
                                       Margin="12,0"/>
                            </Grid>
                            
                            <!-- 版本回復 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本回復" FontSize="14" FontWeight="SemiBold"
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Text="回復到選擇的版本或重置歷史" FontSize="12" 
                                              Foreground="{StaticResource MutedTextBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="安全回復" 
                                       Command="{x:Bind ViewModel.RevertToCommitCommand}"
                                       Background="{StaticResource SuccessBrush}" Foreground="White"
                                       CornerRadius="6" BorderThickness="0" Padding="12,8"
                                       Margin="8,0,4,0"
                                       ToolTipService.ToolTip="創建新提交來撤銷變更，保留歷史記錄"/>
                                
                                <Button Grid.Column="2" Content="重置版本" 
                                       Command="{x:Bind ViewModel.ResetToCommitCommand}"
                                       Background="{StaticResource DangerBrush}" Foreground="White"
                                       CornerRadius="6" BorderThickness="0" Padding="12,8"
                                       Margin="4,0"
                                       ToolTipService.ToolTip="危險操作：刪除提交歷史並重置到指定版本"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 變更的檔案 -->
                <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="變更的圖面檔案" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"
                                  Foreground="{StaticResource PrimaryTextBrush}"/>
                        <ListView ItemsSource="{x:Bind ViewModel.ChangedFiles}" x:Name="ChangedFilesList"
                                 Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Border Background="{StaticResource InputBackgroundBrush}" 
                                           CornerRadius="6" Margin="0,3" Padding="12"
                                           BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Bind}" 
                                                      VerticalAlignment="Center" FontSize="12"
                                                      Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <Button Grid.Column="1" Content="開啟圖面" 
                                                   Click="OpenDrawingButton_Click"
                                                   Tag="{x:Bind}"
                                                   FontSize="11" Padding="8,6"
                                                   Background="{StaticResource AccentBrush}" Foreground="White"
                                                   CornerRadius="4" BorderThickness="0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <Border Grid.Row="2" Background="{StaticResource PanelBackgroundBrush}" 
                Padding="16,10" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                      FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
        </Border>
    </Grid>
</Window>
