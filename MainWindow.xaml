<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GitDWG.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GitDWG"
    xmlns:models="using:GitDWG.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GitDWG - Git版本控制與AutoCAD圖面比較工具">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具列 -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <Button Content="選擇儲存庫" Command="{x:Bind ViewModel.SelectRepositoryCommand}"/>
                <Button Content="初始化儲存庫" Command="{x:Bind ViewModel.InitializeRepositoryCommand}"/>
                <Button Content="重新整理" Command="{x:Bind ViewModel.RefreshCommand}"/>
                <Button Content="強制重新整理" Command="{x:Bind ViewModel.ForceRefreshCommand}" 
                       ToolTipService.ToolTip="強制重新整理Git狀態，解決DWG檔案偵測問題"/>
                <Button Content="檢查CAD檔案" Command="{x:Bind ViewModel.CheckCadFilesCommand}"
                       ToolTipService.ToolTip="檢查CAD檔案狀態和鎖定情況"/>
                <Button Content="診斷提交問題" Command="{x:Bind ViewModel.DiagnoseCommitCommand}"
                       ToolTipService.ToolTip="診斷為什麼無法提交並提供解決建議"/>
                <Button Content="設定AutoCAD路徑" Command="{x:Bind ViewModel.SetAutoCADPathCommand}"/>
                <Button Content="用戶設定" Command="{x:Bind ViewModel.EditUserSettingsCommand}"
                       ToolTipService.ToolTip="修改作者資訊和其他設定"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <TextBlock Text="目前分支:" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind ViewModel.CurrentBranch, Mode=OneWay}" 
                          FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 主要內容 -->
        <Grid Grid.Row="1" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板 -->
            <ScrollViewer Grid.Column="0" Margin="0,0,16,0">
                <StackPanel Spacing="8">
                    <!-- 儲存庫資訊 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="儲存庫資訊" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBlock Text="路徑:" FontSize="12"/>
                            <TextBlock Text="{x:Bind ViewModel.RepositoryPath, Mode=OneWay}" 
                                      FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <TextBlock Text="狀態:" FontSize="12"/>
                            <TextBlock Text="{x:Bind ViewModel.IsRepositoryLoaded, Mode=OneWay}" 
                                      FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 分支列表 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="分支" FontWeight="Bold" FontSize="14"/>
                                <Button Content="+" Command="{x:Bind ViewModel.CreateBranchCommand}" 
                                       Margin="8,0,0,0" FontSize="12" Padding="8,2"/>
                            </StackPanel>
                            <ListView ItemsSource="{x:Bind ViewModel.Branches}" 
                                     SelectionMode="Single" MaxHeight="150">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" VerticalAlignment="Center" FontSize="12"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- 提交區域 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="提交變更" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            
                            <!-- 顯示當前作者資訊 -->
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4" Padding="8" Margin="0,0,0,8">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="作者資訊" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorName, Mode=OneWay}" 
                                              FontSize="11" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AuthorEmail, Mode=OneWay}" 
                                              FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <TextBox PlaceholderText="提交訊息" Text="{x:Bind ViewModel.CommitMessage, Mode=TwoWay}" 
                                    Margin="0,0,0,8" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="暫存所有" Command="{x:Bind ViewModel.StageAllCommand}"/>
                                <Button Content="提交" Command="{x:Bind ViewModel.CommitCommand}"
                                       ToolTipService.ToolTip="{x:Bind ViewModel.CommitButtonTooltip, Mode=OneWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 狀態變更 -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="檔案狀態" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                            <ListView ItemsSource="{x:Bind ViewModel.StatusItems}" MaxHeight="150">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" FontSize="12" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 右側面板 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- 提交歷史 -->
                <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="提交歷史" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{x:Bind ViewModel.Commits.Count, Mode=OneWay}" 
                                      FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="個提交" FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <ScrollViewer Height="400" VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled">
                            <ListView ItemsSource="{x:Bind ViewModel.Commits}" 
                                     SelectedItem="{x:Bind ViewModel.SelectedCommit, Mode=TwoWay}"
                                     SelectionMode="Single"
                                     ScrollViewer.VerticalScrollMode="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:CommitInfo">
                                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                               CornerRadius="4" Margin="0,2" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="{x:Bind ShortSha}" 
                                                          FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind Message}" 
                                                          FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Bind Author}" 
                                                          FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                
                                                <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
                                                          Text="{x:Bind Date}" 
                                                          FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                          Margin="0,4,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 版本操作 -->
                <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="版本操作" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 版本比較 -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本比較" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="比較選擇的提交與其前一個版本" FontSize="11" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="比較版本" 
                                       Command="{x:Bind ViewModel.CompareCommitsCommand}"
                                       Margin="8,0"/>
                            </Grid>
                            
                            <!-- 版本回復 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="版本回復" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="回復到選擇的版本或重置歷史" FontSize="11" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="安全回復" 
                                       Command="{x:Bind ViewModel.RevertToCommitCommand}"
                                       Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                       Margin="8,0,4,0"
                                       ToolTipService.ToolTip="創建新提交來撤銷變更，保留歷史記錄"/>
                                
                                <Button Grid.Column="2" Content="重置版本" 
                                       Command="{x:Bind ViewModel.ResetToCommitCommand}"
                                       Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                       Margin="4,0"
                                       ToolTipService.ToolTip="危險操作：刪除提交歷史並重置到指定版本"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 變更的檔案 -->
                <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="變更的圖面檔案" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <ListView ItemsSource="{x:Bind ViewModel.ChangedFiles}" x:Name="ChangedFilesList">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                           CornerRadius="4" Margin="0,2" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Bind}" 
                                                      VerticalAlignment="Center" FontSize="12"/>
                                            <Button Grid.Column="1" Content="開啟圖面" 
                                                   Click="OpenDrawingButton_Click"
                                                   Tag="{x:Bind}"
                                                   FontSize="11" Padding="6,4"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                Padding="16,8">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                      FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Border>
    </Grid>
</Window>
